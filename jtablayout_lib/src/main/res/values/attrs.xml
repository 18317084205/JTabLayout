<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="JTabLayout">
        <attr name="tabTextColor" format="color|reference" />
        <attr name="tabBackground" format="reference" />
        <attr name="tabMode">
            <enum name="scrollable" value="0" />
            <enum name="fixed" value="1" />
        </attr>
        <attr name="dividerWidth" format="dimension" />
        <attr name="dividerHeight" format="dimension" />
        <attr name="dividerColor" format="color" />

        <attr name="textColorTransition">
            <enum name="normal" value="0" />
            <enum name="shadow" value="1" />
        </attr>

        <attr name="textBold" format="boolean" />

        <attr name="itemLayoutOrientation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>

        <attr name="tabTextSize" format="dimension" />

        <attr name="badgeColor" format="color" />
        <attr name="badgeTextColor" format="color" />
        <attr name="badgeTextSize" format="dimension" />
        <attr name="badgeStrokeColor" format="color" />
        <attr name="badgeStrokeWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BadgeView">
        <attr name="strokeColor" format="color" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="backgroundColor" format="color" />
    </declare-styleable>
</resources>