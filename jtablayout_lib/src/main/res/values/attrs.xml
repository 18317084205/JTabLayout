<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="JTabLayout">
        <attr name="jTabTextColor" format="color|reference" />
        <attr name="jTabBackground" format="reference" />
        <attr name="jTabMode">
            <enum name="scrollable" value="0" />
            <enum name="fixed" value="1" />
        </attr>
        <attr name="jDividerWidth" format="dimension" />
        <attr name="jDividerHeight" format="dimension" />
        <attr name="jDividerColor" format="color" />

        <attr name="jTextColorTransition">
            <enum name="normal" value="0" />
            <enum name="shadow" value="1" />
        </attr>

        <attr name="jTextBold" format="boolean" />

        <attr name="jItemLayoutOrientation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>

        <attr name="jTabTextSize" format="dimension" />

        <attr name="jBadgeColor" format="color" />
        <attr name="jBadgeTextColor" format="color" />
        <attr name="jBadgeTextSize" format="dimension" />
        <attr name="jBadgeStrokeColor" format="color" />
        <attr name="jBadgeStrokeWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="JTab">
        <attr name="jTabTitleColor" format="color|reference" />
        <attr name="jTabNormalIcon" format="reference|color" />
        <attr name="jTabSelectedIcon" format="reference|color" />
        <attr name="jTabTitle" format="string" />
        <attr name="jLayoutOrientation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>

    </declare-styleable>

    <declare-styleable name="JBadgeView">
        <attr name="jStrokeColor" format="color" />
        <attr name="jStrokeWidth" format="dimension" />
        <attr name="jBackgroundColor" format="color" />
    </declare-styleable>

</resources>